<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_iamge"
        android:layout_width="150dp"
        android:layout_height="81dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/link_default_thumb"
        android:contentDescription="@string/no_comment"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_iamge"
        android:layout_alignBottom="@id/iv_iamge"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="@string/about"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_checked_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@color/black_trans60"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_checked_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/link_item_select"
            android:contentDescription="@string/no_comment" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@id/iv_iamge"
        android:ellipsize="middle"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/about"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/iv_iamge"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/about"
        android:textColor="@color/color_link_text_grey"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:text="@string/about"
        android:textColor="@color/color_link_text_grey"
        android:textSize="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/iv_item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_item_delete"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_date"
        android:contentDescription="@string/no_comment"
        android:padding="5dp"
        android:src="@drawable/link_file_download_btn"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_date"
        android:contentDescription="@string/no_comment"
        android:padding="5dp"
        android:src="@drawable/link_file_delete_btn"
        android:visibility="visible" />


</RelativeLayout>